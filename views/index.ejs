<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>SMART FARM</title>
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
	<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
	<link rel="stylesheet" href="style.css">
</head>
<body>
	<section>
		<div class="container-fluid">
		  <div class="container">
			<div class="row">
			  <div class="col-sm-4">
				<div class="card text-center">
				  <div class="title">
					<i class="fa fa-duotone fa-cloud"></i>
					<h2>WEATHER</h2>
				  </div>
				  <div class="price">
					<h4><%= DATA[0].weather_condition%></h4>
				  </div>
				</div>
			  </div>
			  <!-- END Col one -->
			  <div class="col-sm-4">
				<div class="card text-center">
				  <div class="title">
					<i class="fa fa-duotone fa-cloud"></i>
					<h2>AIR</h2>
				  </div>
				  <div class="price">
					<h4><%= DATA[0].air_condition%></h4>
				  </div>
				</div>
			  </div>
			</div>
		</div>
	</section>
	<div class="container1">
		<div class="table">
			<div class="table-header">
				<div class="header__item"><a id="robot_id" class="filter__link filter__link--number">robot id</a></div>
				<div class="header__item"><a id="robot_condition" class="filter__link filter__link--number">robot state</a></div>
				<div class="header__item"><a id="energy_consumption" class="filter__link filter__link--number">energy consumption</a></div>
				<div class="header__item"><a id="robot_condition" class="filter__link filter__link--number">robot condition</a></div>
			</div>
			<% Data.forEach((item, index) => { %>
				<div class="table-content">
					<div class="table-row">
							<div class="table-data"><%= item.robot_id%></div>
							<div class="table-data"><%= item.robot_state.toUpperCase()%></div>
							<div class="table-data"><%= item.energy_consumption %></div>
							<div class="table-data"><%= item.robot_condition.toUpperCase() %></div>
					</div>
				</div>
			<% }); %>
		</div>
	</div>


</body>
</html>

